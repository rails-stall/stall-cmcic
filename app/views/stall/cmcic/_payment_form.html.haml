%form.payment-gateway-form{ action: gateway.request.target_url, method: "post" }
  %input#version{         name: "version",        type: "hidden", value: gateway.request.version }
  %input#tpe{             name: "TPE",            type: "hidden", value: gateway.request.tpe }
  %input#date{            name: "date",           type: "hidden", value: gateway.request.date }
  %input#montant{         name: "montant",        type: "hidden", value: gateway.request.montant }
  %input#reference{       name: "reference",      type: "hidden", value: gateway.request.reference }
  %input#mac{             name: "MAC",            type: "hidden", value: gateway.request.hmac_token }
  %input#url-retour{      name: "url_retour",     type: "hidden", value: gateway.request.url_retour }
  %input#url-retour-ok{   name: "url_retour_ok",  type: "hidden", value: gateway.request.url_retour_ok }
  %input#url-retour-err{  name: "url_retour_err", type: "hidden", value: gateway.request.url_retour_err }
  %input#lgue{            name: "lgue",           type: "hidden", value: gateway.request.lgue }
  %input#societe{         name: "societe",        type: "hidden", value: gateway.request.societe }
  %input#texte-libre{     name: "texte-libre",    type: "hidden", value: gateway.request.texte_libre }
  %input#mail{            name: "mail",           type: "hidden", value: gateway.request.mail }

  %button.btn.btn-primary{ name: "submit_cic_payment_form", type: "submit" }
    = t('stall.payments.gateway.pay')
